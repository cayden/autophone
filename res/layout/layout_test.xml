<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    androidrientation="vertical" android:layout_width="fill_parent"  
    android:layout_height="fill_parent"
    android:orientation="vertical"
    >  
  
       
       
         <Button android:id="@+id/button_write"
        android:layout_marginTop="20dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/test_write"
        />
      
       <Button android:id="@+id/button_read"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/test_read"
        />
       <TextView android:id="@+id/test_result"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/test_result"/>
</LinearLayout>  